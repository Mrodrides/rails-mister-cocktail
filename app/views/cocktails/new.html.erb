<h1>New Cocktail</h1>

<div class="container">
  <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name, input_html: {  id: 'cocktail_name'} %>
    <%= f.simple_fields_for :doses do |builder| %>
      <div class="fields">
        <%= render "doses_fields", :f => builder %>
      </div>
    <% end %>
    <%= f.submit "Submit", input_html: { id: "confirm", class: "btn btn-primary" }%>
  <% end %>
</div>

<%= javascript_pack_tag 'application' %>
